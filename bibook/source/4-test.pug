                    button.test-button__btn Thường xuyên
                    button.test-button__btn Luôn luôn

                  p.test-question Câu 2/10

                  .test-answer
                    .test-answer__wrap
                      input(type="radio", id="male", name="gender").radio-input
                      label(for="male") Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor i
                    input(type="radio", id="female", name="gender").radio-input
                    label(for="female") 女性

              <!-- VẬN ĐỘNG TINH -->
              .tab-pane.fade#nav-2(role="tabpanel", aria-labelledby="nav-2-tab")
                .profile-bar.card-bg
                  p b

              <!-- VẬN ĐỘNG THÔ -->
              .tab-pane.fade#nav-3(role="tabpanel", aria-labelledby="nav-3-tab")
                .profile-bar.card-bg
                  p c

              <!-- GIAO TIẾP -->
              .tab-pane.fade#nav-4(role="tabpanel", aria-labelledby="nav-4-tab")
                .profile-bar.card-bg
                  p d

          .profile-comment__button
            a.profile-comment__btn.profile-comment__btn--green(href="#!") Test lại
              span(style="margin-left: 5px;")
                i.fa.fa-angle-right(style="margin-right: -4px;")
                i.fa.fa-angle-right
            a.profile-comment__btn.profile-comment__btn--purple(href="#!") Tiếp tục test nội dung khác
              span(style="margin-left: 5px;")
                i.fa.fa-angle-right(style="margin-right: -4px;")
                i.fa.fa-angle-right
    +footer
  script(src="js/main.js")